extends ./layout/index

block contenido
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row.justify
        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales
        .row.justify-content-center
            h2.d-block.w-100.text-center Agrega un Testimonial
            .row.justify-content-center.col
                .col-md-8
                    if(errores)
                        each error in errores 
                            .alert.col.alert-danger.text-center #{error.mensaje}
                    form(action="/testimoniales" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input(id="nombre", class="form-control", type="text", placeholder="Tu Nombre", name="nombre", value= nombre)
                        .form-group
                            label(for="correo") Correo Electr√≥nico
                            input(id="correo", class="form-control", type="text", placeholder="Tu Correo", name="correo", value= correo)
                        .form-group
                            label(for="mensaje") Mensaje
                            textarea(id="mensaje", class="form-control", type="text", placeholder="Tu Mensaje", name="mensaje", rows=3) #{mensaje}
                        input(type="submit", class="btn btn-success btn-block")